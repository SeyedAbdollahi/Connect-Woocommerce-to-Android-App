<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/template_address_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp">

    <RadioButton
        android:id="@+id/template_address_radio_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="5dp"/>

    <ImageView
        android:id="@+id/template_address_edit_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit_blue_24dp"
        app:layout_constraintLeft_toRightOf="@id/template_address_delete_img"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="5dp"/>

    <ImageView
        android:id="@+id/template_address_delete_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_delete_blue_24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/template_address_state_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="استان: "
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/template_address_edit_img"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/template_address_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="تهران"
        android:maxLines="1"
        app:layout_constraintRight_toLeftOf="@id/template_address_state_txt"
        app:layout_constraintTop_toBottomOf="@id/template_address_edit_img"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/template_address_city_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="شهر: "
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/template_address_state_txt"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/template_address_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="لواسان"
        android:maxLines="1"
        app:layout_constraintRight_toLeftOf="@id/template_address_city_txt"
        app:layout_constraintTop_toBottomOf="@id/template_address_state_txt"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/template_address_post_code_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="کدپستی: "
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/template_address_city_txt"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/template_address_post_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="33266483"
        android:maxLines="1"
        app:layout_constraintRight_toLeftOf="@id/template_address_post_code_txt"
        app:layout_constraintTop_toBottomOf="@id/template_address_city_txt"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/template_address_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="آدرس: "
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/template_address_post_code_txt"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/template_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="سایتاشسایشتن، ستنیتنمشستتینشنس، نسینشتسنتینمشتس ، شسینتشسنمتیشتسیشهخهص"
        android:ellipsize="end"
        android:singleLine="true"
        app:layout_constraintRight_toLeftOf="@id/template_address_txt"
        app:layout_constraintTop_toBottomOf="@id/template_address_post_code_txt"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="5dp"/>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/backgroundGray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/template_address"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

</android.support.constraint.ConstraintLayout>