<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundGray"
    android:clickable="true">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/detail_order_price_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/detail_order_total_price_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="جمع کل خرید"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/detail_order_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 تومان"
            app:layout_constraintLeft_toLeftOf="parent"
            android:padding="5dp"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/detail_order_recycle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/detail_order_price_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

</android.support.constraint.ConstraintLayout>