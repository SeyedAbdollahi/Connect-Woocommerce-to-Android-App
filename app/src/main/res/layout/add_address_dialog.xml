<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="افزودن آدرس"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:layout_margin="5dp"/>
            <TextView
                android:id="@+id/add_address_state_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="استان"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/add_address_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"/>

            <TextView
                android:id="@+id/add_address_city_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="شهر"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"/>

            <EditText
                android:id="@+id/add_address_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"/>

            <TextView
                android:id="@+id/add_address_post_code_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="کد پستی"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"/>

            <EditText
                android:id="@+id/add_address_post_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"/>

            <TextView
                android:id="@+id/add_address_address_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="نشانی پستی"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"/>

            <EditText
                android:id="@+id/add_address_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"/>

            <TextView
                android:id="@+id/add_address_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/red"
                android:visibility="invisible"/>
            <Button
                android:id="@+id/add_address_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ذخیره آدرس"
                android:backgroundTint="@color/light_blue"
                android:textColor="@android:color/white"
                android:layout_gravity="center"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>