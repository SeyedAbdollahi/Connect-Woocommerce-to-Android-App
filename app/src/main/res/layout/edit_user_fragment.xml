<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:clickable="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/edit_user_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="لطفا اطلاعات کاربری خود را کامل کنید"
            android:layout_margin="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/edit_user_first_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="نام"
            android:layout_margin="5dp"
            app:layout_constraintTop_toBottomOf="@id/edit_user_txt"
            app:layout_constraintRight_toRightOf="parent"/>

        <EditText
            android:id="@+id/edit_user_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="reza"
            android:layout_margin="5dp"
            app:layout_constraintTop_toBottomOf="@id/edit_user_first_name_txt"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/edit_user_last_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="نام خانوادگی"
            android:layout_margin="5dp"
            app:layout_constraintTop_toBottomOf="@id/edit_user_first_name"
            app:layout_constraintRight_toRightOf="parent"/>

        <EditText
            android:id="@+id/edit_user_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="abdollahi"
            android:layout_margin="5dp"
            app:layout_constraintTop_toBottomOf="@id/edit_user_last_name_txt"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/edit_user_email_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ایمیل"
            android:layout_margin="5dp"
            app:layout_constraintTop_toBottomOf="@id/edit_user_last_name"
            app:layout_constraintRight_toRightOf="parent"/>

        <EditText
            android:id="@+id/edit_user_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="reza@gmail.com"
            android:layout_margin="5dp"
            app:layout_constraintTop_toBottomOf="@id/edit_user_email_txt"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/edit_user_phone_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="شماره تماس"
            android:layout_margin="5dp"
            app:layout_constraintTop_toBottomOf="@id/edit_user_email"
            app:layout_constraintRight_toRightOf="parent"/>

        <EditText
            android:id="@+id/edit_user_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="09191354240"
            android:layout_margin="5dp"
            app:layout_constraintTop_toBottomOf="@id/edit_user_phone_txt"
            app:layout_constraintRight_toRightOf="parent"/>

        <Button
            android:id="@+id/edit_user_confirm_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ثبت اطلاعات"
            android:backgroundTint="@color/light_blue"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/edit_user_phone"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

    </android.support.constraint.ConstraintLayout>
</android.support.design.widget.CoordinatorLayout>